# Environment Configuration
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# SQLite (default - no installation needed)
DATABASE_URL=sqlite:///./viraat_military_ai.db

# PostgreSQL (production - requires PostgreSQL installed)
# DATABASE_URL=postgresql://viraat_user:viraat_pass@localhost:5432/viraat_military_ai

# LLM Settings
LLM_MODEL_PATH=./models/llm/mistral-7b-instruct-v0.2.Q4_K_M.gguf
LLM_CONTEXT_SIZE=4096
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_N_GPU_LAYERS=0  # Set to -1 to use GPU, 0 for CPU only

# ChromaDB Settings
CHROMADB_PATH=../knowledge-base/embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Settings
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.3

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Analytics
ENABLE_ANALYTICS=true
